<div class='burger-container'>

    <div class='row'>
        <div class='col-md-12 text-center'>
            <h1>Eat A Burger!</h1>
        </div>
    </div>

    <!-- Burgers available to devour -->
    <div class='row'>
        <div class='col-sm-6 col-md-6 col-lg-6'>
            <br>
            <h2>Eat These Burgers!</h2>
            <ul>
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    {{this.id}} {{this.burger_name}}

                    <form action='/{{this.id}}?_method=PUT' method='POST'>
                        <input type='hidden' name='devoured' value='true'>
                        <button class='btn-primary' type='submit'>Devour It</button>
                    </form>

                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>
    </div>

    <!-- Bugers that have been devoured -->
    <div class='col-sm-6 col-md-6 col-lg-6'>
        <br>
        <h2>Devoured Burgers!</h2>

        {{#each burgers}} {{#if this.devoured}}
        <li>
            {{this.id}} {{this.burger_name}}
        </li>
        {{/if}} {{/each}}
    </div>

    <!-- Add a burger input field -->
    <div class='row'>
        <div class='col-md-12 text-center'>
            <h1>Add A Burger!</h1>

            <form class='create-form' action='/' method='POST'>
                <div class='form-group'>
                    <p>Enter a burger, submit it, devour it!</p>
                    <input type='text' id='ca' name='burger_name'>
                </div>

                <button class='btn-primary' type='submit'>Submit</button>
            </form>
        </div>
    </div>

</div>